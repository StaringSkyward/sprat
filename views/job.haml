- if @job
  %h2= "Job #{@job.id}"

  %dl.dl-horizontal
    %dt Host
    %dd= @job.host || " "
    %dt Spreadsheet
    %dd= @job.spreadsheet
    %dt Worksheet
    %dd= "#{@job.worksheet}"
    %dt Created
    %dd= @job.created_at || " "
    %dt Tests
    %dd= @results.size
    %dt Started
    %dd= @job.started_at || " "
    %dt Finished
    %dd= @job.finished_at || " "
    %dt Status
    %dd= "#{@job.status}"
    %dt Reason
    %dd= "#{@job.reason}"

  %span.pull-right
    %form{ :action => "/jobs/new", :method => "get"}
      %input{:type => "hidden", :name => "host", :class => "text", :value => @job.host}
      %input{:type => "hidden", :name => "spreadsheet", :class => "text", :value => @job.spreadsheet}
      %input{:type => "hidden", :name => "worksheet", :class => "text", :value => @job.worksheet}
      %input{:type => "submit", :name => "rerun", :value => "Run Again", :class => "btn btn-primary", :autofocus => true}

  %table.table.table-bordered.table-hover
    %thead
      %th Test ID
      %th Result
      %th Reason
      %th Parameters
      %th Response
    %tbody
      - @results.each do |result|
        %tr
          %td= result.id
          %td= result.result
          %td= result.reason
          %td
            %a(href='#{result.request}') #{result.params}
          %td= result.response

- else
  %h2= "New Job"
  %form{ :action => "/jobs", :method => "post"}
    %fieldset
      %label{:for => "host"} Host
      %input{:type => "text", :name => "host", :class => "text", :value => @host}
      %label{:for => "spreadsheet"} Spreadsheet Name
      %input{:type => "text", :name => "spreadsheet", :class => "text", :value => @spreadsheet}
      %label{:for => "worksheet"} Worksheet Name
      %input{:type => "text", :name => "worksheet", :class => "text", :value => @worksheet}
      %label{:for => "local"} Only save results locally
      %input{:type => "checkbox", :name => "local", :class => "checkbox", :checked => true}
      %p
      %p
        %input{:type => "submit", :name => "queue", :value => "Queue", :class => "btn btn-primary"}
        %input{:type => "submit", :name => "run", :value => "Run Now", :class => "btn btn-primary", :autofocus => true}


